<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>CS_add_Email_of_Approver_APAC</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>adrian.tan@u-blox.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Approval APAC</description>
        <entryCriteria>
            <formula>AND(
  NOT(AND(
    ISBLANK(Share_Australia__c),
    ISBLANK(Share_China__c),
    ISBLANK(Share_India__c),
    ISBLANK(Share_Japan__c),
    ISBLANK(Share_Korea__c),
    ISBLANK(Share_RoA__c),
    ISBLANK(Share_Taiwan__c)
  )),
  OR(
    Share_Australia__c&gt;0,
    Share_China__c&gt;0,
    Share_India__c&gt;0,
    Share_Japan__c&gt;0,
    Share_Korea__c&gt;0,
    Share_RoA__c&gt;0,
    Share_Taiwan__c&gt;0
  )
)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>CS 02.1: (to deactivate) APAC</label>
        <name>CS_02_1_to_deactivate_APAC</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>CS_add_Email_of_Approver_Americas</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>carl.bellanca@u-blox.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Approval Americas</description>
        <entryCriteria>
            <formula>NOT(OR(ISBLANK(Share_Americas__c),Share_Americas__c=0))</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>CS 02.2: (to deactivate) Americas</label>
        <name>CS_02_2_to_deactivate_Americas</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>CS_add_Email_of_Approver_EMEA</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>markus.schaefer@u-blox.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Approval EMEA</description>
        <entryCriteria>
            <formula>AND(
  NOT(AND(
    ISBLANK(Share_EMEA__c),
    ISBLANK(Share_HQ__c)
  )),
  OR(
    Share_EMEA__c&gt;0,
    Share_HQ__c&gt;0
  )
)</formula>
        </entryCriteria>
        <label>CS 02.3: (to deactivate) EMEA</label>
        <name>CS_02_3_to_deactivate_EMEA</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>This process is used if the Contribution Share is already Activated.</description>
    <emailTemplate>unfiled$public/CS_Update_notification_to_deactivate</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(
  NOT(AND(
    ISBLANK(Share_Americas__c),
    ISBLANK(Share_Australia__c),
    ISBLANK(Share_China__c),
    ISBLANK(Share_EMEA__c),
    ISBLANK(Share_India__c),
    ISBLANK(Share_Japan__c),
    ISBLANK(Share_Korea__c),
    ISBLANK(Share_RoA__c),
    ISBLANK(Share_Taiwan__c)
  )),
  OR(
    Share_Americas__c&gt;0,
    Share_Australia__c&gt;0,
    Share_China__c&gt;0,
    Share_EMEA__c&gt;0,
    Share_India__c&gt;0,
    Share_Japan__c&gt;0,
    Share_Korea__c&gt;0,
    Share_RoA__c&gt;0,
    Share_Taiwan__c&gt;0
  ),
  ISPICKVAL(Status__c,&quot;Activated&quot;)
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CS_Deactivation</name>
            <type>Alert</type>
        </action>
        <action>
            <name>CS_Status_Deactivated</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>CS_Final_rejection</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>CS_add_Date_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>CS 02: for all to deactivate</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>CS_Recalled</name>
            <type>Alert</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
