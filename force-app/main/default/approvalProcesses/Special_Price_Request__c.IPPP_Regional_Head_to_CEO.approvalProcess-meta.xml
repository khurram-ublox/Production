<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>SPR_Approved_By_CEO</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SPR_Date_Approved_By_CEO</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SPR_Fill_Prices_Valid_Until</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SPR_Request_approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>SPR_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>(PPP) Regional Head to CEO</label>
        <name>PPP_Regional_Head_to_CEO</name>
        <rejectionActions>
            <action>
                <name>SPR_Date_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SPR_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>PPP Process: Regional Head  &gt; CEO</description>
    <emailTemplate>unfiled$public/SPR_Request_update_notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>ISPICKVAL(Price_Level__c, &quot;PPP (Project Price Plan)&quot;) &amp;&amp;
($User.Alias=&quot;atan&quot; || $User.Alias=&quot;egui&quot; || $User.Alias=&quot;sram&quot;)</formula>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>SPR_Date_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SPR_Populate_Total_Contribution_Initial</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SPR_Populate_Total_Revenue_Initial</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SPR_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>IPPP: Regional Head to CEO</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>4</processOrder>
    <recallActions>
        <action>
            <name>SPR_Status_Not_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
