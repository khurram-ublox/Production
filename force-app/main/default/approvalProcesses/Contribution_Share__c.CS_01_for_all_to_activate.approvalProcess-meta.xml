<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>CS_add_Email_of_Approver_APAC</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>adrian.tan@u-blox.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>It goes to Head of APAC</description>
        <entryCriteria>
            <formula>AND(
  NOT(AND(
    ISBLANK(Share_Australia__c),
    ISBLANK(Share_China__c),
    ISBLANK(Share_India__c),
    ISBLANK(Share_Japan__c),
    ISBLANK(Share_Korea__c),
    ISBLANK(Share_RoA__c),
    ISBLANK(Share_Taiwan__c)
  )),
  OR(
    Share_Australia__c&gt;0,
    Share_China__c&gt;0,
    Share_India__c&gt;0,
    Share_Japan__c&gt;0,
    Share_Korea__c&gt;0,
    Share_RoA__c&gt;0,
    Share_Taiwan__c&gt;0
  )
)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>CS 01.1: APAC</label>
        <name>CS_01_1_APAC</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>CS_add_Email_of_Approver_Americas</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>carl.bellanca@u-blox.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Approval by Americas</description>
        <entryCriteria>
            <formula>NOT(ISBLANK(Share_Americas__c)) &amp;&amp; Share_Americas__c &gt; 0</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>CS 01.2: Americas</label>
        <name>CS_01_2_Americas</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>CS_add_Email_of_Approver_EMEA</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>markus.schaefer@u-blox.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Approval EMEA</description>
        <entryCriteria>
            <formula>AND(
  NOT(AND(
    ISBLANK(Share_EMEA__c),
    ISBLANK(Share_HQ__c)
  )),
  OR(
    Share_EMEA__c&gt;0,
    Share_HQ__c&gt;0
  )
)</formula>
        </entryCriteria>
        <label>CS 01.3: EMEA</label>
        <name>CS_01_3_EMEA</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>To activate the record. The process always goes to Region Heads</description>
    <emailTemplate>unfiled$public/CS_Update_notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(
  NOT(AND(
    ISBLANK(Share_Americas__c),
    ISBLANK(Share_Australia__c),
    ISBLANK(Share_China__c),
    ISBLANK(Share_EMEA__c),
    ISBLANK(Share_India__c),
    ISBLANK(Share_Japan__c),
    ISBLANK(Share_Korea__c),
    ISBLANK(Share_RoA__c),
    ISBLANK(Share_Taiwan__c)
  )),
  OR(
    Share_Americas__c&gt;0,
    Share_Australia__c&gt;0,
    Share_China__c&gt;0,
    Share_EMEA__c&gt;0,
    Share_India__c&gt;0,
    Share_Japan__c&gt;0,
    Share_Korea__c&gt;0,
    Share_RoA__c&gt;0,
    Share_Taiwan__c&gt;0
  ),
  NOT(ISPICKVAL(Status__c,&quot;Activated&quot;))
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CS_Final_approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>CS_Status_Activated</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>CS_Final_rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>CS_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>CS_add_Date_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CS_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>CS 01: for all to activate</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>CS_Recalled</name>
            <type>Alert</type>
        </action>
        <action>
            <name>CS_Status_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
