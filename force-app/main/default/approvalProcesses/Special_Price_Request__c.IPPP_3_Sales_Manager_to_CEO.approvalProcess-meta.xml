<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Account__c</field>
        <field>Opportunity__c</field>
        <field>Total_Quantity__c</field>
        <field>Total_Revenue__c</field>
        <field>Total_Contribution__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>SPR_Approved_By_Regional_Head_EMEA</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SPR_Approved_By_Team_Manager</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SPR_Date_Approved_By_Regional_Head</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SPR_Date_Approved_By_Team_Manager</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SPR_Fill_Regional_Head_Email</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SPR_Fill_Team_Manager_Email</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SPR_Status_Pending</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>(PPP 3) Approval by Team Manager and Regional Head</label>
        <name>PPP_3_Approval_by_Team_Manager_and_Regional_Head</name>
        <rejectionActions>
            <action>
                <name>SPR_Date_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SPR_Request_rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>SPR_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>SPR_Approved_By_CEO</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SPR_Date_Approved_By_CEO</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SPR_Fill_Prices_Valid_Until</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SPR_Request_approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>SPR_Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Special_Price_Request__c.Approved_By_Regional_Head__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <label>(PPP 3) Approval by CEO</label>
        <name>PPP_3_Approval_by_CEO</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>SPR_Date_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>SPR_Request_rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>SPR_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>PPP Process 3: Sales Manager &gt; Regional Head &gt; CEO
Sales Managers reporting to Region Head</description>
    <emailTemplate>unfiled$public/SPR_Request_update_notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>ISPICKVAL(Price_Level__c, &quot;PPP (Project Price Plan)&quot;) &amp;&amp;
(
$User.Alias=&quot;aboe&quot;
)</formula>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>SPR_Date_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SPR_Populate_Total_Contribution_Initial</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SPR_Populate_Total_Revenue_Initial</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SPR_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SPR_Update_Reg_Head_Assignee_Email</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SPR_Update_Team_Manager_Assignee_Emai</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>IPPP 3: Sales Manager to CEO</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>3</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
