<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Account</field>
        <field>Distributor_Project_ID__c</field>
        <field>Distribution_Method__c</field>
        <field>Distribution_Partner__c</field>
        <field>Lead_Project_Name__c</field>
        <field>Lead_Project_Description__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Approved_Status</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Generate_Registration_No</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Set_Registration_Expiration</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Account_Owner__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Global Distribution</label>
        <name>Global_Distribution</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Opportunity_Global_Distribution_submit_for_approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>((1 AND 2) OR 3 ) AND 4</booleanFilter>
        <criteriaItems>
            <field>Opportunity.LeadSource</field>
            <operation>equals</operation>
            <value>Webform</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Lead_Source_Webform__c</field>
            <operation>equals</operation>
            <value>Global Distribution</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Registration_Type__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Area_opportunity_owner__c</field>
            <operation>notEqual</operation>
            <value>EMEA</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved_Global_Registration_Template</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Registration_Created_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Denied_Global_Registration_Template</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rejected_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Pending_Status</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Global Distribution Project</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Recall_Status</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
