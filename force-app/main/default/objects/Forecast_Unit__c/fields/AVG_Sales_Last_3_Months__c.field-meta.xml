<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AVG_Sales_Last_3_Months__c</fullName>
    <description>With current setting, this is always the sum of sales of the last 3 months divided by 4. (conservative approach)</description>
    <externalId>false</externalId>
    <formula>MAX(Sales_Last_3_Months__c / MAX(X3_months_forward_periods__c, 4),0.1)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>AVG Sales Last 3 Months</label>
    <precision>18</precision>
    <required>false</required>
    <scale>0</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
