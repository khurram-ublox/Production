<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Use_Restriction_Check</fullName>
    <active>true</active>
    <description>CEL products should have this field.</description>
    <errorConditionFormula>AND(
Product_Center__c=&quot;Cellular&quot;,
text(Use_Restriction__c)=&quot;Not applicable&quot;)</errorConditionFormula>
    <errorDisplayField>Use_Restriction__c</errorDisplayField>
    <errorMessage>Use Restriction must be defined for all Cellular products.</errorMessage>
</ValidationRule>
