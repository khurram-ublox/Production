<aura:component >
	<aura:attribute name="show" type="Boolean" default="false" />
	<aura:handler name="change" value="{!v.show}" action="{!c.showHideSpinner}"/>

	<ltng:require styles="/resource/SLDS0121/assets/styles/salesforce-lightning-design-system-ltng.min.css" />

	<div aura:id="spinner" class="slds">
		<div class="centerBlock">
			<div class="slds-spinner--medium">
				<img src="/resource/SLDS0121/assets/images/spinners/slds_spinner_brand.gif" alt="Loading..." />
			</div>
		</div>
	</div>
</aura:component>